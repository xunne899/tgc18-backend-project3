{{#extends 'base'}}

{{#block 'content'}}
<h1>Your Cart</h1>
<a href="/checkout" class="btn btn-primary">Checkout</a>
<ul class="list-group">
    {{#each cartItems}}
    <li class="list-group-item">
        <h4>Name :{{this.variant.product.name}}</h4>
        <h5>Size : {{this.variant.size.size}}</h5>
        <h5>Spiciness : {{this.variant.spiciness.spiciness}}</h5>
        <h5>Cost (In cents):{{this.variant.cost}}</h5>
        <h5>
            <form method="POST" action="/cart/{{this.variant_id}}/update">
                <input type="hidden" name="_csrf" value="{{../csrfToken}}" />
                Quantity: <input type="text" style="width:30px" value="{{this.quantity}}"
                    name="newQuantity" />
                <input type="submit" value="Update" class="btn btn-primary btn-sm">
            </form>
        </h5>
        <a href="/cart/{{this.variant_id}}/delete" class="btn btn-danger btm-sm">Delete</a> 
         {{!-- <input type="submit" class="btn btn-danger" value="Delete"/> --}}
    </li>

    {{/each}}
</ul>

{{/block}}

{{/extends}}