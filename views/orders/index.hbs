{{#extends 'base'}}

{{#block 'content'}}
   <div class="row mt-5">
   <div class=" p-3 shadow-lg rounded-5 col-12 col-md-12 col-sm-12">
   <div class="d-flex justify-content-between mt-2">
    <h1 >Order Detail</h1> 
   {{!-- <a href="/users/register" class="btn btn-dark btn-sm mt-3" style="width:80px;height:30px">Register</a> --}}
</div>
 <div class="accordion mt-3 mb-3" id="accordion">
  <div class="accordion-item shadow-lg">
    <h2 class="accordion-header" id="headingOne">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
   Search Filter
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordion">
      <div class="accordion-body">
           <form method="GET">
    {{{form}}}
    <input type="submit" value="Search" class="btn btn-dark my-3"/>
     </form>
      </div>
    </div>
  </div>
    
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Email</th>
                <th>Shipping Address</th>
                <th>Total Cost</th>
                <th>Payment Intent</th>
                 <th>Order Date</th>
                <th>Status</th>


            </tr>
        </thead>
        <tbody>
            {{#each successful}}
            <tr>
                <td>{{this.order_id}}</td>
                <td>{{this.customer.email}}</td>
                <td>{{this.shipping_address}}</td>
                <td>{{this.total_cost}}</td>
                 <td>{{this.payment_intent}}</td>
                  <td>{{this.orderdate}}</td>
                   <td>{{this.order_status}}</td>
                <td>
                    <a href="users/{{this.id}}/update" ><i class="fa fa-edit" style="font-size:23px;color:black"></i></a>
                    <a href="users/{{this.id}}/delete" class="ms-2"><i class="fa fa-trash " style="font-size:23px;color:black"></i></a>

                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</div>
   </div>
   </div>
{{/block}}

{{/extends}}