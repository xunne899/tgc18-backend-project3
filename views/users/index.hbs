{{#extends 'base'}}

{{#block 'content'}}
 <h1 class="mt-4">Executive Staff</h1>
    
    <table class="table mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.username}}</td>
                <td>{{this.email}}</td>
                <td>{{this.user}}</td>
                <td>
                    <a href="users/{{this.id}}/update" ><i class="fa fa-edit" style="font-size:23px;color:black"></i></a>
                    <a href="users/{{this.id}}/delete" class="ms-2"><i class="fa fa-trash " style="font-size:23px;color:black"></i></a>

                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</div>
{{/block}}

{{/extends}}