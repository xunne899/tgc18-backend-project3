{{#extends 'base'}}

{{#block 'content'}}
 <h1 class="mt-3">Employees/Staff</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td style="color:black">{{this.id}}</td>
                <td>{{this.username}}</td>
                <td>{{this.email}}</td>
                <td>{{this.user}}</td>
                <td>
                    <a href="users/{{this.id}}/update" class="btn btn-dark btn-sm">Update
                       
                    </a>
                    <a href="users/{{this.id}}/delete" class="btn btn-dark p-1 btn-sm">Delete
                    </a>

                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</div>
{{/block}}

{{/extends}}